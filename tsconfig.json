{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "config/**/*",
    "migrations/**/*",
    "seeders/**/*"
  ]
}
